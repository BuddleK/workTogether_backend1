<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="carePwCheck">
	<!-- 비밀번호 체크 -->
	<select id="checkPw" parameterType="CarePwCheckDTO" resultType="int">
		SELECT COUNT(*)
		FROM tbl_users
		WHERE users_number = #{usersNumber}
		AND users_password = #{usersPassword}
	</select>
	
</mapper>

